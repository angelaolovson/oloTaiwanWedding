---
interface Props {
	event: string;
	time: string;
	menu: string;
}

const {event, time, menu } = Astro.props;
---
<div class="flex flex-col items-center my-8">
    <div class="text-xl md:text-5xl">
        {event}
    </div>
    <div class="text-lg md:text-3xl my-1 md:my-7 text-neutral-700">
        {time}
    </div>
    <div class="text-sm md:text-2xl mt-2 md:mt-5 text-neutral-500">
        {menu}
    </div>
</div>