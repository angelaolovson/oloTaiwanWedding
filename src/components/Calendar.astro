---
interface Props {
	event: string;
	time: string;
}

const {event, time } = Astro.props;
---
<div class="flex flex-col items-center mb-24 md:mb-44">
    <div class="text-xl md:text-3xl">
        {event}
    </div>
    <div class="text-sm md:text-2xl my-5 md:my-10 text-neutral-500">
        {time}
    </div>
</div>