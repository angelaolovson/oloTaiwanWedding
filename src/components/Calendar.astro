---
interface Props {
	event: string;
	time: string;
	menu: string;
}

const {event, time, menu } = Astro.props;
---
<div class="flex flex-col items-center mb-24 md:mb-44">
    <div class="text-2xl md:text-4xl">
        {event}
    </div>
    <div class="text-xl md:text-3xl my-3 md:my-10 text-neutral-700">
        {time}
    </div>
    <div class="text-sm md:text-2xl text-neutral-500">
        {menu}
    </div>
</div>