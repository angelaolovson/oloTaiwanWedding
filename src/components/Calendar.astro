---
interface Props {
	event: string;
	time: string;
	menu: string;
}

const {event, time, menu } = Astro.props;
---
<div class="flex flex-col items-center my-8 md:my-12">
    <div class="text-xl md:text-4xl">
        {event}
    </div>
    <div class="text-lg md:text-2xl my-1 md:my-4 text-neutral-700">
        {time}
    </div>
    <div class="text-sm md:text-xl mt-2 text-neutral-500">
        {menu}
    </div>
</div>